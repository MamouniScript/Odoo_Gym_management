<odoo>
    <!-- Form View for Member -->
    <record id="view_form_member" model="ir.ui.view">
        <field name="name">mana_gym.member.form</field>
        <field name="model">mana_gym.member</field>
        <field name="arch" type="xml">
            <form string="Member">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                    </group>
                    <group>
                        <field name="phone"/>
                        <field name="address"/>
                    </group>
                    <group>
                        <field name="membership_status"/>
                        <field name="membership_type_id"/>
                    </group>
                    <group>
                        <field name="joining_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View for Member -->
    <record id="view_tree_member" model="ir.ui.view">
        <field name="name">mana_gym.member.tree</field>
        <field name="model">mana_gym.member</field>
        <field name="arch" type="xml">
            <tree string="Member">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="membership_status"/>
                <field name="membership_type_id"/>
                <field name="joining_date"/>
            </tree>
        </field>
    </record>
</odoo>
